{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "CreateUsers",
      "Effect": "Allow",
      "Action": [
        "iam:CreateUser"
      ],
      "Resource": [
        "arn:aws:iam::405644541454:user/peterdir",
        "arn:aws:iam::405644541454:user/peterdir-*"
      ]
    },
    {
      "Sid": "CreateUsersDelegation",
      "Effect": "Allow",
      "Action": [
        "iam:CreateUser"
      ],
      "Resource": "arn:aws:iam::*:user/*"
    },
    {
      "Sid": "ManageUserCredentials",
      "Effect": "Allow",
      "Action": [
        "iam:CreateAccessKey",
        "iam:DeleteAccessKey",
        "iam:UpdateAccessKey",
        "iam:ListAccessKeys",
        "iam:GetAccessKeyLastUsed"
      ],
      "Resource": [
        "arn:aws:iam::405644541454:user/peterdir",
        "arn:aws:iam::405644541454:user/peterdir-*"
      ]
    },
    {
      "Sid": "ListUsersForLookup",
      "Effect": "Allow",
      "Action": [
        "iam:ListUsers",
        "iam:ListAccessKeys",
        "iam:GetUser"
      ],
      "Resource": "*"
    },
    {
      "Sid": "STSGetSessionToken",
      "Effect": "Allow",
      "Action": [
        "sts:GetSessionToken"
      ],
      "Resource": "*"
    },
    {
      "Sid": "ManageRestrictionTags",
      "Effect": "Allow",
      "Action": [
        "iam:TagUser",
        "iam:ListUserTags"
      ],
      "Resource": [
        "arn:aws:iam::405644541454:user/peterdir",
        "arn:aws:iam::405644541454:user/peterdir-*"
      ]
    },
    {
      "Sid": "ManageRestrictionTagsDelegation",
      "Effect": "Allow",
      "Action": [
        "iam:TagUser",
        "iam:ListUserTags"
      ],
      "Resource": "arn:aws:iam::*:user/*"
    },
    {
      "Sid": "PreventTagRemovalOrModification",
      "Effect": "Deny",
      "Action": [
        "iam:UntagUser"
      ],
      "Resource": [
        "arn:aws:iam::405644541454:user/peterdir",
        "arn:aws:iam::405644541454:user/peterdir-*"
      ]
    }
  ]
}
